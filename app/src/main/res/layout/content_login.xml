<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_login" tools:context="com.cloudfoyo.letsmeet.Login">
<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/textview2"
    android:text="A few things before we get started!"
    android:gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview2"
        android:id="@+id/name"
        android:text="Name"
        android:layout_marginTop="65dp"/>
    <EditText
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/name"
        android:layout_below="@+id/textview2"
        android:layout_marginTop="50dp"
        android:inputType="textPersonName"
        android:layout_marginLeft="30dp"
        android:id="@+id/et_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:id="@+id/branch"
        android:text="Select your branch"
        android:layout_marginTop="65dp"/>
    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/branch"
        android:layout_marginTop="30dp" >
    <RadioButton
        android:id="@+id/radio0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:layout_below="@+id/radioGroup1"
        android:text="Mechanical Engineering" />
        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_below="@+id/radioGroup1"
            android:text="Computer Science" />
        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_below="@+id/radioGroup1"
            android:text="Electronics and Communication" />
        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_below="@+id/radioGroup1"
            android:text="Electrical Engineering" />
        <RadioButton
            android:id="@+id/radio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_below="@+id/radioGroup1"
            android:text="Civil Engineering" />
    </RadioGroup>
    <Button
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/login"
        android:text="Done"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/invalid"
        android:layout_below="@+id/radioGroup1"
        android:layout_toRightOf="@+id/login"
        android:layout_marginLeft="20dp"
        android:textColor="#ff000d"/>
</RelativeLayout>
